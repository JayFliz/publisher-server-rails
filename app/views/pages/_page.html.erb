<% if page.public? || signed_in? %>
  <%= content_tag :article, post_id_and_classes(page) do %>

    <%= render "/posts/header",  post: page %>
    <%= render "/posts/content", post: page %>
    <%= render "/posts/footer",  post: page %>

    <%= link_to "Edit", edit_page_path(page), class: "edit" if signed_in? %>

  <% end %>
<% end %>

