<%= render "admin/form_errors", object: @post %>

<%= render "admin/form_title_subtitle", f: f %>
<%= render "admin/form_content", f: f %>

<fieldset>
  <legend class="h5">Photo Meta</legend>

  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <div class="form-group">
        <%= f.label :image_url, "Image URL" %>
        <%= f.url_field :image_url, class: "form-control" %>
      </div>
    </div>

    <div class="col-xs-12 col-sm-3">
      <div class="form-group">
        <%= f.label :width, "Width" %>
        <%= f.number_field :width, class: "form-control" %>
        <p class="help-block">In pixels</p>
      </div>
    </div>

    <div class="col-xs-12 col-sm-3">
      <div class="form-group">
        <%= f.label :height %>
        <%= f.number_field :height, class: "form-control" %>
        <p class="help-block visible-xs-block hidden">In pixels</p>
      </div>
    </div>
  </div>

  <%= render "admin/datetime_group", f: f, attr: :captured_at, object: @post, include_blank: true %>
</fieldset>

<%= render "admin/form_actions",   f: f, cancel_url: (on_page? ? pages_url : articles_url) %>
<%= render "admin/form_post_meta", f: f, post: @post %>
<%= render "admin/form_actions",   f: f, cancel_url: (on_page? ? pages_url : articles_url) %>
