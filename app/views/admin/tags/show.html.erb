<div class="page-header">
<h1>
  <%= link_to "Admin: Tags", admin_tags_path %>
</h1>

<h2>
  Posts tagged: <%= @tag.display_name %>
  <%= link_to "EDIT", [:edit, :admin, @tag], class: "btn btn-primary btn-xs" %>
</h2>
</div>

<ol class="h-feed">
  <% @tag.posts.each do |post| %>
    <li class="h-entry">
      <h1 class="h4"><%= link_to post.name, post.path, class: "p-name u-url" %></h1>
      <p>
        <% post.tags.each do |tag| %>
          <%= link_to tag.display_name, [:admin, tag] %>
        <% end %>
    </li>
  <% end %>
</table>
