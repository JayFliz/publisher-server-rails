<h1>Tags</h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Namespace</th>
      <th>Predicate</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
    <% unless tag.slug.blank? %>
        <tr>
          <td><%= link_to "Edit", [:edit, :admin, tag], class: "btn btn-primary btn-xs" %></td>
          <td><%= link_to tag.name, [:admin, tag], class: "btn btn-default btn-xs" %></td>
          <td><%= tag.namespace %></td>
          <td><%= tag.predicate %></td>
          <td><%= link_to "Destroy", [:admin, tag], method: :delete, data: { confirm: "Are you sure you're sure? There is NO UNDO." }, class: "btn btn-danger btn-xs" %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
