<% unless @redirects.blank? %>
  <table class="table">
    <caption>All Redirects</caption>
    <% @redirects.each do |redirect| %>
      <tr>
        <th><%= link_to "/#{redirect.source_path}", [:edit, :admin, redirect] %></th>
        <td><%= link_to "/#{redirect.target_path}", "/#{redirect.target_path}", rel: "external" %></td>
        <td>
          <%= link_to "Delete", [:admin, redirect], method: :delete, data: { confirm: "Are you sure you're sure? There is NO UNDO." }, class: "btn btn-danger btn-xs" %>
        </td>
      </tr>
    <% end %>
  </table>
<% end %>
