<%= form_for [:admin, @redirect] do |f| %>
  <%= render "admin/form_errors", thing: @redirect %>

  <div class="form-group">
    <%= f.label :source_path %>
    <%= f.text_field :source_path, class: "form-control input-lg" %>
  </div>
  
  <div class="form-group">
    <%= f.label :target_path %>
    <%= f.text_field :target_path, class: "form-control input-lg" %>
  </div>
  
  <%= render "admin/form_actions", f: f, cancel_url: admin_redirects_url %>
<% end %>
