<div class="row">
  <div class="col-xs-12 col-sm-4">
    <%= select_year datetime_select_value(thing, attr, :year),
          { prompt: true },
          name:  "#{post_type}[#{attr}(1i)]",
          id:    "#{post_type}_#{attr}_1i",
          class: "form-control datetime-select" %>
  </div>
  <div class="col-xs-12 col-sm-4">
    <%= select_month datetime_select_value(thing, attr, :month),
          { prompt: true },
          name:  "#{post_type}[#{attr}(2i)]",
          id:    "#{post_type}_#{attr}_2i",
          class: "form-control datetime-select" %>
  </div>
  <div class="col-xs-12 col-sm-4">
    <%= select_day datetime_select_value(thing, attr, :day),
          { prompt: true },
          name:  "#{post_type}[#{attr}(3i)]",
          id:    "#{post_type}_#{attr}_3i",
          class: "form-control datetime-select" %>
  </div>
</div>
