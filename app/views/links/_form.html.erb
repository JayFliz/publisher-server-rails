<%= form_for @link do |f| %>
  <%= render "admin/form_errors", object: @link %>

  <div class="form-group">
    <%= f.label :name, "Display Text" %>
    <%= f.text_field :name, class: "form-control input-lg", placeholder: "Display Text" %>
    <p class="help-block">Twitter, @username, Portfolio, etc</p>
  </div>

  <div class="form-group">
    <%= f.label :url, "URL" %>
    <%= f.text_field :url, class: "form-control input-lg", placeholder: "https://example.org" %>
  </div>

  <%= render "admin/form_actions", f: f, cancel_url: links_url %>
<% end %>
