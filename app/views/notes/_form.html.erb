<%= render "admin/form_errors", object: @post %>

<div class="form-group">
  <%= f.label :content, "Content", class: "sr-only" %>
  <%= f.text_area :content, class: "form-control", rows: 10, placeholder: "Note content..." %>
</div>

<div class="actions">
  <%= link_to "Cancel", notes_url, class: "cancel" %>
  <%= f.submit "Publish", class: "btn btn-success btn-lg" %>
</div>

<fieldset>
  <legend class="h6">Optional Meta</legend>

  <div class="form-group toggle-group">
    <%= f.check_box :private, class: "form-control" %>

    <%= f.label :private do %>
      <span class="btn btn-default toggle-unchecked">Public Post</span>
      <span class="btn btn-default   toggle-checked">Private Post</span>
    <% end %>

    <p class="help-block">
      <span class="toggle-unchecked"><b>Public Posts</b> are visible to anyone.</span>
      <span class="toggle-checked  "><b>Private Posts</b> are only visible to you.</span>
    </p>
  </div>

  <div class="form-group">
    <%= f.label :in_reply_to, "In Reply To" %>
    <%= f.text_field :in_reply_to, class: "form-control", placeholder: "http://example.com http://example.net" %>
    <p class="help-block">Space separated URLs</p>
  </div>

  <div class="row">
    <div class="form-group col-sm-6">
      <%= f.label :slug, "URL Slug" %>
      <%= f.text_field :slug, class: "form-control" %>
      <p class="help-block">Auto-generated if left blank</p>
    </div>

    <div class="form-group col-sm-6">
      <%= f.label :tags %>
      <%= text_field_tag :tags, @post.tags.map{|t| t.display(:name)}.join(", "), class: "form-control", placeholder: "cats, dogs, bunny rabbits" %>
      <p class="help-block">Comma separated</p>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :published_at %>
    <%= render "admin/date_select_row", object: @post, post_type: "note", attr: :published_at %>
    <%= render "admin/time_select_row", object: @post, post_type: "note", attr: :published_at %>
  </div>
</fieldset>

<div class="actions">
  <%= link_to "Cancel", notes_url, class: "cancel" %>
  <%= f.submit "Publish", class: "btn btn-success btn-lg" %>
</div>
