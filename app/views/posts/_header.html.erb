<header>
  <% if a_reply?(post) %>
    <div class="reply-context">
      <b>In Reply To</b>
      <%= link_to_in_reply_to_urls post %>
    </div>
  <% end %>

  <% unless post.title.blank? %>
    <h1 class="p-name">
      <%= link_to post.path, class: "u-url u-uid" do %>
        <%= render "posts/title",    post: post %>
        <%= render "posts/subtitle", post: post %>
      <% end %>
    </h1>
  <% end %>

  <% if lookup_context.template_exists?("header", post.post_type_type.downcase.pluralize, true) %>
    <%= render "#{post.post_type_type.downcase.pluralize}/header", post: post.post_type %>
  <% end %>
</header>
