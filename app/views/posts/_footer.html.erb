<footer>
  <p>
    <%= link_to "Published", post.path, class: "u-url u-uid p-as-verb" %>

    <span class="screen-reader-only">
      this
      <%= link_to post.class.to_s.downcase, "/#{post.class.to_s.downcase.pluralize}", class: "p-post-type p-as-object" %>
    </span>

    <%= time_tag post.published_at, class: "dt-published" do %>
      <%= small_word_tag "on" %>
      <%= human_readable_date post.published_at %>

      <%= small_word_tag "at" %>
      <%= human_readable_time post.published_at %>
    <% end %>

    <%= small_word_tag "by" %>

    <span class="p-author p-as-actor h-card">
      <a href="<%= root_url %>" rel="me" class="u-url p-name">
        <%= post.user.name %>
      </a>
    </span>
  </p>

  <% unless post.tags.blank? %>
    <p class="tags">
      <b>Tags</b>
      <%= link_to_tags_for(post) %>
    </p> <!-- .tags -->
  <% end %>


  <div class="syndication">
    <%#= link_to_syndication(post).html_safe %>
  </div> <!-- .syndication -->
</footer>
