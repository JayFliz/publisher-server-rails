<%= render "admin/form_errors", object: @post %>

<div class="form-group">
  <%= f.label :title, class: "sr-only" %>
  <%= f.text_field :title, class: "form-control", placeholder: "Title" %>
</div>

<div class="form-group">
  <%= f.label :subtitle, class: "sr-only" %>
  <%= f.text_field :subtitle, class: "form-control", placeholder: "Subtitle" %>
</div>

<div class="form-group">
  <%= f.label :content, "Content", class: "sr-only" %>
  <%= f.text_area :content, class: "form-control", rows: 10, placeholder: lorem_ipsum %>
</div>

<%= render "admin/form_actions",   f: f, cancel_url: (on_page? ? pages_url : articles_url) %>
<%= render "admin/form_post_meta", f: f, post: @post %>
<%= render "admin/form_actions",   f: f, cancel_url: (on_page? ? pages_url : articles_url) %>
