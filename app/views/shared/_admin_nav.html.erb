          <ul class="dropdown-menu">
            <li><%= link_to "Profile",  profile_path %></li>
            <li><%= link_to "Settings", settings_path %></li>
            <li role="separator" class="divider"></li>
            <li><%= link_to "Sign Out", signout_path %></li>
          </ul>
        </li>
