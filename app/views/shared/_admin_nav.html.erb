<% if signed_in? %>
  <nav class="navbar navbar-default" role="navigation">
    <div class="container">

      <div class="navbar-header">
        <%= link_to "NEW POST",  new_post_path, class: "btn btn-success" %>

        <form class="form form-inline hidden-sm hidden-md hidden-lg" role="search">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Search site">
          </div>
          <button type="submit" class="btn btn-default sr-only">Submit</button>
        </form>

        <%= link_to root_path, rel: "home", class: "navbar-brand" do %>
          <%= image_tag setting(:touch_icon_url_57x57), alt: "Site avatar" %>
        <% end %>
      </div>

      <p class="hidden-sm hidden-md hidden-lg" id="me-links-xs">
        <%= link_to "Profile",  profile_path  , class: "btn btn-default" %>
        <%= link_to "Settings", settings_path , class: "btn btn-default" %>
